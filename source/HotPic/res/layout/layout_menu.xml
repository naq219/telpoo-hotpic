<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111111" >

    <RelativeLayout
        android:id="@+id/layFavorite"
        style="@style/form_fw"
        android:orientation="horizontal"
        android:padding="@dimen/menu_space1" >

        <ImageView
            android:id="@+id/temp"
            android:visibility="gone"
            android:layout_width="@dimen/menu_icon"
            android:layout_height="@dimen/menu_icon"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/favorite"
            style="@style/textMenu"
            android:layout_width="fill_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/favorite"
            android:layout_toRightOf="@+id/temp"
            android:singleLine="true"
            android:text="Hình ảnh yêu thích "
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/favorite"
            style="@style/text"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/circle"
            android:gravity="center"
            android:padding="3dp"
            android:text="23"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <View
        android:id="@+id/temp1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/layFavorite"
        android:background="#1d1d1d" />

    <ExpandableListView
        android:id="@+id/elv"
        style="@style/form_ff"
        android:groupIndicator="@drawable/expand_indicator"
        android:cacheColorHint="#111111"
        android:dividerHeight="0dp"
        android:divider="@null"
        android:layout_below="@+id/temp1" >
    </ExpandableListView>

</RelativeLayout>