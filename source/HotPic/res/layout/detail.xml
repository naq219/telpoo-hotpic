<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8e8e8" >

    <com.telpoo.hotpic.detail.MyPhotoViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/photoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        style="@style/form_fw"
        android:layout_alignParentBottom="true"
        android:background="#60000000"
        android:orientation="vertical" >

        <TextView
            style="@style/text_white"
            android:padding="5dp"
            android:text="Hiep em di :)) Hiep em di :))" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#60ffffff" />

        <LinearLayout
            style="@style/form_fw"
            android:orientation="horizontal"
            android:padding="2dp" >

            <ImageView
                android:id="@+id/favorite"
                style="@style/form_ww"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:scaleType="fitEnd"
                android:src="@drawable/ic_chitiet_favprite_normal" />

            <ImageView
                android:id="@+id/like"
                style="@style/form_ww"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:src="@drawable/ic_chitiet_like_normal" />

            <ImageView
                android:id="@+id/comment"
                style="@style/form_ww"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:scaleType="fitStart"
                android:src="@drawable/ic_chitiet_comment_normal" />
        </LinearLayout>

        <LinearLayout
            style="@style/form_fw"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:padding="2dp" >

            <ImageView
                android:id="@+id/download"
                style="@style/form_ww"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:scaleType="fitEnd"
                android:src="@drawable/ic_chitiet_down_normal" />

            <ImageView
                android:id="@+id/setting"
                style="@style/form_ww"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:src="@drawable/ic_chitiet_setting_normal" />

            <ImageView
                android:id="@+id/share"
                style="@style/form_ww"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:scaleType="fitStart"
                android:src="@drawable/ic_chitiet_share_normal" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>