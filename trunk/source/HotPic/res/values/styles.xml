<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text_black" parent="text">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="text_black_bold" parent="text_black">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_white" parent="text">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="text_small1" parent="text_black">
        <item name="android:textColor">#cfcfcf</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_header" parent="text">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textMenu" parent="text">
        <item name="android:layout_marginLeft">15sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>